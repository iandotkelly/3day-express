extends layout

block body

	div(ng-controller="MainCtrl")

		header
			.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
				.container
					.navbar-header
						button.navbar-toggle(data-toggle='collapse' data-target='.navbar-collapse')
							span.sr-only Toggle navigation
							span.icon-bar
						a.navbar-brand(href='#') 3DAY

					.navbar-collapse.collapse
						ul.nav.navbar-nav
							li.active
								a(href='#') Home

						ul.nav.navbar-nav.navbar-right
							li.dropdown(tabindex='0')
								a.dropdown-toggle(data-toggle='dropdown') Help
									span.caret
								ul.dropdown-menu(role='menu')
									li
										a(ui-sref='help') Tutorial
									li.divider
									li
										a(ui-sref='about') About 3DAY

		main
			div(ui-view)
